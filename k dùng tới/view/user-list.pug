doctype html
html
  head
    title User Management
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      .row.mb-3
        .col-md-6
          h2 User Management
        .col-md-6.text-end
          button.btn.btn-success.me-2(type='button', onclick="document.getElementById('newUserForm').style.display='block'") Add User
          button.btn.btn-secondary(type='button') Refresh

      table.table.table-hover
        thead
          tr
            th(scope='col') ID
            th(scope='col') Name
            th(scope='col') Email
            th(scope='col') Phone
            th(scope='col') Actions
        tbody
          each user in users
            tr
              td #{user._id}
              td #{user.name}
              td #{user.email}
              td #{user.phone}
              td
                button.btn.btn-primary.btn-sm.me-1(type='button', onclick=`editUser('${user._id}')`) Edit
                button.btn.btn-danger.btn-sm(type='button', onclick=`deleteUser('${user._id}')`) Delete

      #newUserForm(style='display:none;' class='mt-3')
        h4 Add New User
        .row
          .col-md-3
            input.form-control.mb-2(type='text', id='newName', placeholder='Name')
          .col-md-3
            input.form-control.mb-2(type='text', id='newGender', placeholder='Gender')
          .col-md-3
            input.form-control.mb-2(type='email', id='newEmail', placeholder='Email')
          .col-md-3
            input.form-control.mb-2(type='text', id='newPhone', placeholder='Phone')
        button.btn.btn-success(type='button', onclick='addUser()') Submit

    script(src='/js/script.js')  